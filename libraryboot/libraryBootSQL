create table Person(
	id int primary key generated by default as identity,
	name varchar(100) unique not null,
	year_of_birth int check(year_of_birth > 1930)
) 

create table Book(
	id int primary key generated by default as identity,
	book_name varchar(100) not null,
	author varchar(100) not null,
	year_of_print int not null check(year_of_print >0),
	person_id int references Person(id) on delete set null,
	taken_at timestamp
)

insert into Person(name, year_of_birth) values ('Volodimir Zelenskiy',  1985);
insert into Person(name, year_of_birth) values ('Petro Poroshenko',  1980);
insert into Person(name, year_of_birth) values ('Viktor Yushenko',  1975);
insert into Person(name, year_of_birth) values ('Andriy Pritula',  1988);

insert into Book(book_name, author, year_of_print, person_id) values('Kobzar', 'T.Shevchenko', 1717, null);
insert into Book(book_name, author, year_of_print, person_id) values('Virshi', 'P.Tichina', 1819, null);
insert into Book(book_name, author, year_of_print, person_id) values('Harry Poter', 'Yakiys Author', 1993, null);
